{% extends "layout.njk" %}

{% block head %}
    <title>Conteúdos da Rocketseat</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" 
        rel="stylesheet">
{% endblock %}

{% block content %}
<h1>Conteúdos</h1>

<div class="cards">

    <div class="card" id="starter">
        <img src="assets/starter.svg" alt="Starter">
        <p id="color-starter">Torne-se um programador desejado</p>
        <p> no mercado
            com esses cursos gratuitos
        </p>
        <div class="info">
            <p>5 Módulos</p>
            <p id="color-tip">FREE</p>
        </div>
    </div>
    <div class="card" id="launchbase">
        <img src="assets/launchbase.svg" alt="LaunchBase">
        <p id="color-launchbase">Domine programação do zero</p>
        <p> e tenha acesso às
            melhores oportunidades do mercado
        </p>
        <div class="info">
            <p>12 Módulos</p>
            <p id="color-tipl">BUY</p>
        </div>
    </div>
    <div class="card" id="gostack">
        <img src="assets/gostack.svg" alt="GoStack">
        <p id="color-gostack">Treino Imersivo</p>
        <p> nas tecnologias
            mais modernas de desenvolvimento web e mobile
        </p>
        <div class="info">
            <p>15 Módulos</p>
            <p id="color-tips">BUY</p>
        </div>
    </div>
</div>
</section>
<div class="modal-overlay">
    <div class="modal">
        <a class="close-modal">
            <i class="material-icons"> close </i>
        </a>
        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
    </div>
</div>
<script src="/scripts.js"></script>

{% endblock %}
