{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <table width="100%">
        <thead>
            <th>Professor</th>
            <th>Disciplinas</th>
            <th>Ação</th>
        </thead>
        <tbody>
            {% for teacher in teachers %}
            <tr>
                <td>
                    <span style="background-image: url({{teacher.avatar_url}})"></span>
                    {{teacher.name}}
                </td>
                {# {% for discipline in teacher.proceeding %} #}
                <td>
                    <span>{{teacher.proceeding}}</span>
                {# </td>    
                {% endfor %} #}
                <td><a href="/teachers/{{teacher.id}}">Visualizar</a></td>    
            </tr>    
            {% endfor %}
        </tbody>
    </table>            
</div>
{% endblock content %}