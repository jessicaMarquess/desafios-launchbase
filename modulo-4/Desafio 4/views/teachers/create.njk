{% extends 'layout.njk' %}

{% block content %}
<form class="card" method = "POST" action = "/teachers">
            <section 
            class = "avatar"
            style = "border-radius: 5px 0 0 5px; background: url(https://source.unsplash.com/collection/10356769/500x500) no-repeat center center / cover">
            </section>
            <section class ="details">
                <h3>Teacher</h3>
                <div class="item">
                    <div>Avatar URL</div>
                    <div>
                        <input 
                            type="url" 
                            name="avatar_url" 
                            placeholder = "http://"
                        >
                    </div>
                </div>
                <div class="item">
                    <div>Nome Completo</div>
                    <div>
                        <input 
                        type="text"
                        name = "name"
                        placeholder = "Name Complete"
                        >
                    </div>
                </div>
                <div class="item">
                    <div>Data de Nascimento</div>
                    <div>
                        <input 
                        type="date" 
                        name="birth"
                        >
                    </div>
                </div>
                <div class="item">
                    <div>Grau de Escolaridade</div>
                    <div>
                        <select name="edu_level">
                            <option value="Médio Completo">Ensino Médio Completo</option>
                            <option value="Superior Completo">Ensino Superior Completo</option>
                            <option value="Mestrado">Mestrado</option>
                            <option value="Doutorado">Superior</option>
                        </select>
                    </div>
                </div>
                <div class="item">
                    <div>Tipo de Aula</div>
                    <div>
                        <span>
                            <input 
                            type="radio" 
                            name="tip"
                            value = "Presencial">
                            Presencial
                        </span>
                        <span>
                            <input 
                            type="radio" 
                            name="tip"
                            value = "À Distância">
                            À Distância
                        </span>
                    </div>
                </div>
                <div class="item">
                    <div>Acompanhamento</div>
                    <div>
                        <input 
                        type="text" 
                        name="proceeding" 
                        placeholder = "Áreas separadas por vírgulas">
                    </div>
                </div>
                
                <button type="submit">Salvar</button>
            
            </section>
</form>
{% endblock content %}
  

